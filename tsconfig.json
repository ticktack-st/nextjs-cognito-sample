{
  "files": ["next-env.d.ts", "next.config.ts", "postcss.config.mjs"],
  "include": [
    "src/**/*.{ts,tsx,js,jsx,mjs,mjsx}",
    "tests/**/*.{ts,tsx,js,jsx,mjs,mjsx}",
    "amplify/**/*.{ts,tsx,js,jsx,mjs,mjsx}",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", "eslint.config.mjs"],
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES2024",
    "lib": ["ES2024", "dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "isolatedModules": true,
    "incremental": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "exactOptionalPropertyTypes": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowUmdGlobalAccess": false,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  }
}
